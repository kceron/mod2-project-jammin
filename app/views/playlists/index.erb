
<div class="text-center">
<h1>Playlists!</h1><br>

<%= form_tag playlists_path, method: :get do %>
  <%= text_field_tag :search, params[:search], list: "name" %>
  <datalist id="name">
    <% Playlist.all.each do |playlist| %>
      <option value="<%= playlist.name %>"></option>
    <% end %>
  </datalist>
  <button type="button" class="btn btn-secondary" id="createedit">
    <%= submit_tag "Search", name: nil, class: "button" %>
  </button>
<% end %>
<br>
</div>
<% @playlists.each do |playlist| %>
<ul class="list">
  <h3><%= link_to playlist.name, playlist, class: "a-primary" %></h3> 
</ul>
    <div class="indent">
    <li><%= pluralize(playlist.songs.count, 'song') %></li>
    <li>Created by: <%= playlist.user.name %></li>
    </div>
    <br><br>
<% end%>
